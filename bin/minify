#!/usr/bin/env php
<?php

$files = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php'
];

foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

$minify = new \Hawk\Minify\MinifyStarter();

echo PHP_EOL;
echo $minify->getSeparator();
echo "Start minify..." . PHP_EOL;
echo $minify->getSeparator();
$minify->squeeze();
echo $minify->getSeparator();